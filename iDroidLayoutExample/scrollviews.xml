<RelativeLayout
	layout_width="match_parent"
	layout_height="match_parent">
	<UIScrollView
		id="button_bar_scroll_view"
		layout_width="match_parent"
		layout_height="44"
		layout_alignParentBottom="true">
		<LinearLayout
			layout_width="wrap_content"
			layout_height="match_parent"
			orientation="horizontal">
			<UIButton
                layout_width="wrap_content"
                layout_height="match_parent"
                layout_marginLeft="10"
                layout_marginRight="5"
                text="Button1"/>
			<UIButton
                layout_width="wrap_content"
                layout_height="match_parent"
                layout_marginLeft="5"
                layout_marginRight="5"
                text="Button2"/>
			<UIButton
                layout_width="wrap_content"
                layout_height="match_parent"
                layout_marginLeft="5"
                layout_marginRight="5"
                text="Button3"/>
			<UIButton
                layout_width="wrap_content"
                layout_height="match_parent"
                layout_marginLeft="5"
                layout_marginRight="5"
                text="Button4"/>
			<UIButton
                layout_width="wrap_content"
                layout_height="match_parent"
                layout_marginLeft="5"
                layout_marginRight="10"
                text="Button5"/>
		</LinearLayout>
	</UIScrollView>
	<UIScrollView
		id="scroll_view_top"
		layout_width="match_parent"
		layout_height="match_parent"
		layout_above="button_bar_scroll_view"
		layout_alignParentTop="true">
		<LinearLayout
			layout_width="match_parent"
			layout_height="wrap_content"
			orientation="vertical">
			<TextView
                layout_width="match_parent"
                layout_height="wrap_content"
                background="#ff0000"
                padding="20"
                text="TextView1"/>
			<TextView
                layout_width="match_parent"
                layout_height="wrap_content"
                padding="20"
                text="TextView2"/>
			<TextView
                layout_width="match_parent"
                layout_height="wrap_content"
                padding="20"
                text="TextView3"/>
			<TextView
                layout_width="match_parent"
                layout_height="wrap_content"
                padding="20"
                text="TextView4"/>
			<TextView
                layout_width="match_parent"
                layout_height="wrap_content"
                padding="20"
                text="TextView5"/>
			<TextView
                layout_width="match_parent"
                layout_height="wrap_content"
                padding="20"
                text="TextView6"/>
			<TextView
                layout_width="match_parent"
                layout_height="wrap_content"
                padding="20"
                text="TextView7"/>
			<TextView
                layout_width="match_parent"
                layout_height="wrap_content"
                padding="20"
                text="TextView8"/>
			<TextView
                layout_width="match_parent"
                layout_height="wrap_content"
                padding="20"
                text="TextView9"/>
		</LinearLayout>
	</UIScrollView>
</RelativeLayout>