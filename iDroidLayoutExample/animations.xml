<LinearLayout
    layout_width="match_parent"
    layout_height="wrap_content"
    orientation="vertical"
    padding="10">
    <LinearLayout
        layout_width="match_parent"
        layout_height="wrap_content"
        orientation="horizontal">
        <LinearLayout
            layout_width="wrap_content"
            layout_height="wrap_content"
            background="#00ff00">
            <TextView
                id="text"
                layout_width="wrap_content"
                layout_height="wrap_content"
                text="Short text"
                background="#00000000"/>
        </LinearLayout>
        <TextView
            id="otherText"
            layout_width="match_parent"
            layout_height="match_parent"
            background="#ff0000"/>
    </LinearLayout>
    <UIButton
        id="button"
        layout_width="100"
        layout_height="30"
        layout_gravity="center_horizontal"
        layout_marginTop="10"
        text="Click me"/>        
</LinearLayout>