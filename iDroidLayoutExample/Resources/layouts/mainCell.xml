<RelativeLayout
    layout_width="match_parent"
    layout_height="match_parent"
    padding="10">
    <TextView
        id="title"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_alignParentTop="true"
        gravity="top|left"
        lines="1"
        font="Helvetica-Bold"/>
    <TextView
        id="description"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_below="title"
        layout_alignParentBottom="true"
        layout_marginTop="10"
        gravity="top|left"
        lines="3"/>
</RelativeLayout>